{% extends "base.twig" %}

{% block title %}Tickets - Ticket Management{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-8">
                    <h1 class="text-2xl font-bold text-gray-900">TicketApp</h1>
                    <nav class="hidden md:flex gap-6">
                        <a href="index.php?page=dashboard" class="text-gray-600 hover:text-gray-900">Dashboard</a>
                        <a href="index.php?page=tickets" class="text-blue-600 font-medium">Tickets</a>
                    </nav>
                </div>
                <div class="flex items-center gap-4">
                    <span class="text-sm text-gray-600">{{ user.name }}</span>
                    <form method="POST" action="index.php?page=logout" class="inline">
                        <button type="submit" class="text-sm text-gray-600 hover:text-gray-900">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold text-gray-900">All Tickets</h2>
            <a href="index.php?page=ticket-form" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                + New Ticket
            </a>
        </div>
        
        <!-- Filter Tabs -->
        <div class="mb-6 flex gap-2 border-b border-gray-200">
            <a href="index.php?page=tickets&status=all" class="px-4 py-2 {% if filterStatus == 'all' %}text-blue-600 border-b-2 border-blue-600{% else %}text-gray-600 hover:text-gray-900{% endif %} font-medium">
                All ({{ stats.total }})
            </a>
            <a href="index.php?page=tickets&status=open" class="px-4 py-2 {% if filterStatus == 'open' %}text-blue-600 border-b-2 border-blue-600{% else %}text-gray-600 hover:text-gray-900{% endif %} font-medium">
                Open ({{ stats.open }})
            </a>
            <a href="index.php?page=tickets&status=in_progress" class="px-4 py-2 {% if filterStatus == 'in_progress' %}text-blue-600 border-b-2 border-blue-600{% else %}text-gray-600 hover:text-gray-900{% endif %} font-medium">
                In Progress ({{ stats.in_progress }})
            </a>
            <a href="index.php?page=tickets&status=closed" class="px-4 py-2 {% if filterStatus == 'closed' %}text-blue-600 border-b-2 border-blue-600{% else %}text-gray-600 hover:text-gray-900{% endif %} font-medium">
                Closed ({{ stats.closed }})
            </a>
        </div>
        
        <!-- Tickets Table -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% set filteredTickets = filterStatus == 'all' ? tickets : tickets|filter(t => t.status == filterStatus) %}
                        {% if filteredTickets|length > 0 %}
                            {% for ticket in filteredTickets %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-gray-900">{{ ticket.title }}</div>
                                    <div class="text-sm text-gray-500">{{ ticket.description|slice(0, 60) }}{% if ticket.description|length > 60 %}...{% endif %}</div>
                                </td>
                                <td class="px-6 py-4">
                                    {% if ticket.status == 'open' %}
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Open</span>
                                    {% elseif ticket.status == 'in_progress' %}
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-amber-100 text-amber-800">In Progress</span>
                                    {% else %}
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Closed</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-gray-600 capitalize">{{ ticket.priority }}</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-gray-600">{{ ticket.created_at|date('M d, Y') }}</span>
                                </td>
                                <td class="px-6 py-4">
                                    <a href="index.php?page=ticket-detail&id={{ ticket.id }}" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                                        View
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                                    No tickets found. <a href="index.php?page=ticket-form" class="text-blue-600 hover:text-blue-700">Create a new ticket</a>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
{% endblock %}
